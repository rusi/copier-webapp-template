[project]
name = "{{app_name}}"
version = "0.1.0"
description = "{{app_short_description}}"
authors = [
    {name = "{{full_name}}", email = "{{email}}"},
]
readme = "README.md"
license = {text = "{{license}}"}

requires-python = ">=3.10"
dependencies = [
    "fastapi>=0.115.6",
    "uvicorn>=0.32.1",
    "arrow>=1.3.0",
    "requests>=2.32.3",
    "psutil>=6.1.1",
    "recurring-ical-events>=3.4.0",
    "icalendar>=6.1.0",
    "apscheduler>=3.11.0"
]

[dependency-groups]
dev = [
    "ruff<1.0.0,>=0.6.9",
    "pytest<9.0.0,>=8.3.3",
    "pytest-copie<1.0.0,>=0.2.0",
    "pytest-freezegun>=0.4.2",
    "coverage[toml]<8.0.0,>=7.6.1",
    "pyprojroot<1.0.0,>=0.3.0",
    "fastapi[standard]>=0.115.6",
]

[tool.pdm]
distribution = false

[tool.pdm.build]
includes = []
